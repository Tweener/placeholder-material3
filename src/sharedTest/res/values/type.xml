<resources>

    <style name="TextAppearance.Mdc3ThemeTest.DisplayLarge" parent="TextAppearance.Material3.DisplayLarge">
        <item name="fontFamily">@font/rubik_300</item>
        <item name="android:textSize">97.54sp</item>
        <item name="android:letterSpacing">-0.0015</item>
    </style>

    <style name="TextAppearance.Mdc3ThemeTest.DisplayMedium" parent="TextAppearance.Material3.DisplayMedium">
        <item name="android:shadowColor">@color/olive_drab</item>
        <item name="android:shadowDx">4.43</item>
        <item name="android:shadowDy">8.19</item>
        <item name="android:shadowRadius">2.13</item>
    </style>

    <style name="TextAppearance.Mdc3ThemeTest.DisplaySmall" parent="TextAppearance.Material3.DisplaySmall">
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.Mdc3ThemeTest.HeadlineLarge" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="fontFamily">sans-serif-light</item>
    </style>

    <style name="TextAppearance.Mdc3ThemeTest.HeadlineMedium" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="fontFamily">sans-serif-light</item>
    </style>

    <style name="TextAppearance.Mdc3ThemeTest.HeadlineSmall" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="fontFamily">sans-serif-black</item>
    </style>

    <style name="TextAppearance.Mdc3ThemeTest.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">serif</item>
    </style>

    <style name="TextAppearance.Mdc3ThemeTest.TitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="fontFamily">monospace</item>
        <item name="android:letterSpacing">0.0</item>
    </style>

    <style name="TextAppearance.Mdc3ThemeTest.TitleSmall" parent="TextAppearance.Material3.TitleSmall">
        <item name="fontFamily">sans-serif-condensed</item>
    </style>

    <style name="TextAppearance.Mdc3ThemeTest.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="fontFamily">@font/rubik_400</item>
        <item name="android:textSize">16.26sp</item>
        <item name="android:letterSpacing">0.005</item>
    </style>

    <style name="TextAppearance.Mdc3ThemeTest.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="fontFamily">cursive</item>
    </style>

    <style name="TextAppearance.Mdc3ThemeTest.BodySmall" parent="TextAppearance.Material3.BodySmall">
        <item name="fontFamily">@string/sans_serif_condensed_light</item>
        <item name="android:letterSpacing">0.04</item>
    </style>

    <!-- Having a string resource with a font family causes TypedValue to have a resource ID -->
    <!-- eg. TextAppearance.AppCompat -->
    <string name="sans_serif_condensed_light">sans-serif-condensed-light</string>

    <style name="TextAppearance.Mdc3ThemeTest.LabelLarge" parent="TextAppearance.Material3.LabelLarge">
        <item name="fontFamily">@font/rubik_500</item>
    </style>

    <style name="TextAppearance.Mdc3ThemeTest.LabelMedium" parent="TextAppearance.Material3.LabelMedium">
        <item name="fontFamily">@font/rubik_700</item>
    </style>

    <style name="TextAppearance.Mdc3ThemeTest.LabelSmall" parent="TextAppearance.Material3.LabelSmall">
        <item name="fontFamily">sans-serif-condensed-medium</item>
    </style>

</resources>